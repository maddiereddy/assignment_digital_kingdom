<h2><a href="/species">All Species</a></h2>

<div class="box">
  <div class="box--title">{{species}}</div>
  <div class="box--content">
    {{#each kingdoms as |kingdom|}}
    <div class="kingdom">
      {{animal}}
      <form class="remove" action="/species/{{../species}}/kingdoms/{{kingdom}}/release" method="post">
        <button>Release</button>
      </form>
    </div>
    {{/each}}
  </div>
</div>

<div class="box">
  <div class="box--title">Add Kingdom</div>
  <div class="box--content">
    <form action="/species/{{species}}" method="POST">
      <input type="text" name="name" id="name" placeholder="Name">
      <input type="submit" value="Add New Kingdom" method="post">
    </form>
  </div>
</div>
